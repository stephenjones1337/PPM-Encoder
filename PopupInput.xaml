<Window x:Class="Project_Encode.PopupInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Encode"
        mc:Ignorable="d"
        Title="Enter Message" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Margin="20,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" MaxLength="255" MaxLines="5"/>
        <Label Content="Enter Message" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSubmit" Content="OK" HorizontalAlignment="Left" Margin="285,125,0,0" VerticalAlignment="Top" Width="75" Click="BtnSubmit_Click"/>

    </Grid>
</Window>
