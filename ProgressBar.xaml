<Window x:Class="Project_Encode.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Encode"
        mc:Ignorable="d"
        Title="Progress Bar" Height="100" Width="300">
    <Grid Margin="20,25">
        <ProgressBar x:Name="pbStatus" Minimum="0" Maximum="100" Value="{Binding WorkerState}"/>
    </Grid>
</Window>
